<body>
    <h1>Login to Control Page</h1>
    
    <div class="login-container">
        <h2>Login</h2>
        <input type="text" id="username" placeholder="Enter Username"><br>
        <input type="password" id="password" placeholder="Enter Password"><br>
        <button onclick="login()">Login</button>
        <div class="error" id="error"></div>
    </div>

    <script>
        // Predefined credentials (for demo purposes)
        const validUsername = "admin";
        const validPassword = "12345";

        // Function to validate login credentials
        function login() {
            const enteredUsername = document.getElementById('username').value;
            const enteredPassword = document.getElementById('password').value;
            const errorElement = document.getElementById('error');

            // Check if the entered username and password match
            if (enteredUsername === validUsername && enteredPassword === validPassword) {
                // If credentials are correct, redirect to the control page
                errorElement.textContent = '';  // Clear any previous error
                window.location.href = "control.html";  // Redirect to the control page
            } else {
                // If credentials are wrong, show an error message
                errorElement.textContent = 'Invalid Username or Password';
            }
        }
    </script>
</body>
